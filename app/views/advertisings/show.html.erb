<p>
  <strong>Title:</strong>
  <%= @advertising.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @advertising.text %>
</p>

<% if @advertising.images.attached? %>
<p>
  <strong>Images:</strong>
  <br>
  <% @advertising.images.each do |image| %>
    <%= image_tag(image) %>
    <%= link_to 'Remove', delete_image_attachment_advertising_url(image),
                          method: :delete,
                          data: { confirm: 'Are you sure?'} %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', edit_advertising_path(@advertising) %>
<%= link_to 'Back', advertisings_path %>
