<% if @advertising.errors.any? %>
 <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
   <div class="panel panel-danger">
    <div class="panel-heading">
     <h2 class="panel-title">
      <%= pluralize(@advertising.errors.count, "error") %>
      prohibited this advertising from being saved:
     </h2>
     <div class="panel-body">
      <ul>
       <% @advertising.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
       <% end %>
      </ul>
     </div>
    </div>
   </div>
  </div>
 </div>
<% end %>

  <div class="row">
 <div class="col-xs-12">
  <%= form_for(@advertising, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :title %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :title, class: "form-control", placeholder: "Title of advertising", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :text %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :text, rows: 10, class: "form-control", placeholder: "Body of advertising" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :images %>
   </div>
   <div class="col-sm-6">
    <%= f.file_field :images, multiple: true, rows: 10, class: "form-control", placeholder: "Body of advertising" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-large' %>
    <%= link_to 'Back', advertisings_path, class: 'btn btn-primary btn-large' %>
   </div>
  </div>
<% end %>
 </div>
</div>
