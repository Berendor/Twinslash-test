nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      a.navbar-brand href="/"  Home
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav
        li
          a href="/admin"  admin
        li
          = form_tag(advertisings_path, method: "get", remote: true,) do
            = text_field_tag :search, params[:search], placeholder: "Enter search term"
            = submit_tag "Search"
        li.dropdown
          a.dropdown-toggle aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" href="#" role="button"
            | Advertising
            span.caret
          ul.dropdown-menu
            - if current_user
              li= link_to 'New advertising', new_advertising_path
            li= link_to 'All advertising', '/advertisings'
            li
              a href="#"  Something else here
      ul.nav.navbar-nav.navbar-right
        li
          - if current_user
            = link_to "Log Out", destroy_user_session_path, method: :delete
        - if current_user
          li.dropdown
            a.dropdown-toggle aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" href="#" role="button"
              = current_user.email
              span.caret
            ul.dropdown-menu
              li
                = link_to 'MY PROFILE',  user_path(current_user)
              li
                a href="#"  Another action
        - else
          ul.nav.navbar-nav.navbar-right
            li= link_to "Sign Up", new_user_registration_path
            li= link_to "Log In", new_user_session_path
